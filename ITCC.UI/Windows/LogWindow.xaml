<Window x:Class="ITCC.UI.Windows.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:utils="clr-namespace:ITCC.UI.Utils"
        mc:Ignorable="d"
        Title="Application log" Height="480" Width="800"
        SizeChanged="LogWindow_OnSizeChanged"
        StateChanged="LogWindow_OnStateChanged">
    <ScrollViewer VerticalScrollBarVisibility="Visible"
                  utils:ScrollViewerExtensions.AlwaysScrollToEnd="True">
        <DataGrid x:Name="LogDataGrid"
                  HorizontalAlignment="Left"
                  Margin="0,0,0,0"
                  VerticalAlignment="Top"
                  AutoGeneratingColumn="LogDataGrid_AutoGeneratingColumn"
                  LoadingRow="LogDataGrid_OnLoadingRow"
                  HorizontalContentAlignment="Stretch"
                  SizeChanged="LogDataGrid_OnSizeChanged"
                  VerticalScrollBarVisibility="Visible"
                  IsReadOnly="True"/>
    </ScrollViewer>

</Window>